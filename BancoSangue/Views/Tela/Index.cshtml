                    <h4 style="color:#10afbf; text-align:center; "><span></span> FOTOS DA CAMPANHA</h4>
                </div>
                <div class="modal-body">

                    <div id="carousel" class="carousel slide" data-ride="carousel">

                        <div class="carousel-inner" role="listbox">

                            @{cont = 0;
                                foreach (var i in m.imagem)
                                {
                                    if (cont == 0) 
                                    {
                            <div class="col-sx-12 caixa2 item active">
                                <img src="~/Content/@i.caminho" alt="@i.Legenda" align="middle" class=" img-responsive">
                                <p>@i.Legenda</p>

                            </div>
                                    }
                                    else
                                    {
                            <div class="col-sx-12 caixa2 item">
                                <img src="~/Content/@i.caminho" alt="@i.Legenda" align="middle" class=" img-responsive">
                                <p>@i.Legenda</p>
                            </div>
                                    }
                                    cont++;



                                }

                            }




                        </div>
                        <a class="left carousel-control" href="#carousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel" data-slide="next">
