@model IEnumerable<BancoSangue.Models.Doacao>

@{
    ViewBag.Title = "Index";
}

<h2>Gerenciar Campanhas Salvas</h2>

<div class="caixa">
    <p>
        @Html.ActionLink("CRIAR NOVA CAMPANHA", "Create")
    </p>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroVagas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeResponsavel)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFim)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroVagas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeResponsavel)
                </td>
                @*<td>
                    @Html.ActionLink("Create", "Create")
                </td>*@
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) 
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) 
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
